<h1>Welcome, <%= @user.first_name %>!</h1>

<h2>Search for a destination:</h2>
<%= form_tag '/destinations', method: :get do %>
  <%= label_tag "Search by Name" %>
  <%= text_field_tag :search_name %>

  <%= label_tag "Search by Type" %>
  <%= select_tag :search_type, options_for_select(@destinations.map(&:destination_type)), {include_blank: '' } %>

  <%= submit_tag 'Search for Destination' %>
<% end %>

<h2>Search for a parking location to leave a review:</h2>
<%= form_tag '/parking_locations', method: :get do %>
  <%= hidden_field_tag :user_id, @user.id %>

  <%= label_tag "Search by Street" %>
  <%= text_field_tag :search_street %>

  <%= submit_tag 'Search for Parking Location' %>
<% end %>
<br>
<%= link_to "See your reviews", user_reviews_path(@user) %>

<h2>Most Frequented Destinations</h2>
  <ol><% @user.most_visited_destinations.each do |destination| %>
    <li><%= link_to destination.name, destination_path(destination) %>, Most Frequented Parking Spot: <%= link_to @user.most_visited_parking_location(destination).name, parking_location_path(@user.most_visited_parking_location(destination)) %></li>
      <% end %></ol>
